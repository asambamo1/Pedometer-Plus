<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    android:background="#424242"
    android:scrollbars="horizontal"
    android:layout_width="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pedometer.asamapps.Activities.BMI_Calculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:padding="8dp"
        android:text="Your Weight:"
        android:textColor="#F1F1F1"
        android:id="@+id/textView10"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/textView21"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#F1F1F1"
        android:textSize="23dp"
        android:text="Your Height:"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView12"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/textView10" />

    <EditText
        android:layout_width="150dp"
        android:hint="Feet"
        android:maxLength="5"
        android:padding="8dp"
        android:textColor="#F1F1F1"
        android:textColorHint="#F1F1F1"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/editText3"
        android:layout_toLeftOf="@+id/editText2" />

    <EditText
        android:layout_width="70dp"
        android:hint="Inches"
        android:textColor="#F1F1F1"
        android:textColorHint="#F1F1F1"
        android:maxLength="3"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignRight="@+id/textView13" />

    <EditText
        android:hint="Pounds"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:maxLength="5"
        android:textColor="#F1F1F1"
        android:textColorHint="#F1F1F1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:inputType="number"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignRight="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="129dp"
        android:layout_alignTop="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="37dp"
        android:text="BMI Classification"
        android:textColor="#F1F1F1"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:textSize="22dp"
        android:text="Underweight               &lt; 18.5"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:textSize="22dp"
        android:text="Normal weight           18.5-24.9"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:textSize="22dp"
        android:text="Overweight                 25-29.9"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:textSize="22dp"
        android:text="Obesity                        â‰¥ 30"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/textView16"
        android:layout_marginTop="23dp" />

    <com.rey.material.widget.Button
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute BMI"
        android:background="#455A64"
        android:textColor="#F1F1F1"
        android:textColorHint="#F1F1F1"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:id="@+id/button4"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true"
        app:rd_rippleType="touch"
        app:rd_backgroundAnimDuration="0"
        app:rd_backgroundColor="@android:color/transparent"
        app:rd_maxRippleRadius="match_view"
        app:rd_rippleAnimDuration="150"
        app:rd_enable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#F1F1F1"
        android:background="@drawable/edittext_border"
        android:padding="8dp"
        android:id="@+id/textView22"
        android:layout_below="@+id/textView23"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textColor="#F1F1F1"
        android:padding="8dp"
        android:text="Your BMI:"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
</ScrollView>